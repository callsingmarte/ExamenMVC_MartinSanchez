@{
    ViewBag.Title = "Contact";
}
<main aria-labelledby="title">
    <header class="bg-primary text-white text-center py-5 mb-4">
        <div class="container">
            <h1 class="fw-bold">Contáctanos</h1>
            <p class="lead">Estamos aquí para ayudarte. No dudes en comunicarte con nosotros.</p>
        </div>
    </header>
    <section class="row justify-content-center mb-5">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h2 class="card-title text-center">Información de Contacto</h2>
                    <p class="card-text text-center">
                        Para cualquier consulta o soporte relacionado con el sistema, utiliza la información a continuación.
                    </p>
                    <hr>
                    <div class="row">
                        <div class="col-md-6 text-center">
                            <h5>Dirección</h5>
                            <address>
                                One Microsoft Way<br>
                                Redmond, WA 98052-6399<br>
                                <abbr title="Phone">Teléfono:</abbr> 425.555.0100
                            </address>
                        </div>
                        <div class="col-md-6 text-center">
                            <h5>Correos Electrónicos</h5>
                            <address>
                                <strong>Soporte:</strong> <a href="mailto:Support@example.com">Support@example.com</a><br>
                                <strong>Marketing:</strong> <a href="mailto:Marketing@example.com">Marketing@example.com</a>
                            </address>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>
