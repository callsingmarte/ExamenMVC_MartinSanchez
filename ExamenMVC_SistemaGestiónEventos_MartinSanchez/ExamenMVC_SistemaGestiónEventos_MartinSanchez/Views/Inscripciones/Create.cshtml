@model ExamenMVC_SistemaGestiónEventos_MartinSanchez.Models.Inscripcion

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
